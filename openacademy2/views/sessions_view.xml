<odoo>
    <data>
        <record model="ir.ui.view" id="oa2_sessions_form">
            <field name="name">openacademy2.sessions.form</field>
            <field name="model">openacademy2.sessions</field>
            <field name="arch" type="xml">
                <form>
                    <notebook>
                        <page string="Main content">
                            <group>
                                <field name="name"/>
                            </group>
                        </page>
                        <page string="Options">
                            <group colspan="3">
                                <field name="start_date"/>
                                <field name="duration"/>
                                <field name="seats"/>
                            </group>
                        </page>
                        <page string="Links">
                            <group colspan="2">
                                <field name="instructor"
                                       domain="['|',('instructor','=', True),
                                                ('teacher','!=', '')]"/>
                                <field name="course"/>
                            </group>
                        </page>
                        <page string="Attendees">
                            <field name="attendees">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="oa2_sessions_tree">
            <field name="name">openacademy2.sessions.tree</field>
            <field name="model">openacademy2.sessions</field>
            <field name="arch" type="xml">
                <tree string="Sessions list">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="duration"/>
                    <field name="seats"/>
                    <field name="instructor"/>
                    <field name="course" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="oa2_sessions_search">
            <field name="name">openacademy2.sessions.search</field>
            <field name="model">openacademy2.sessions</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="duration"/>
                    <field name="seats"/>
                </search>
            </field>
        </record>
    </data>
</odoo>
